<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_star_notification_message"
        android:textAlignment="center"
        android:layout_marginEnd="@dimen/padding_extra"
        android:layout_marginRight="@dimen/padding_extra"
        android:layout_marginStart="@dimen/padding_extra"
        android:layout_marginLeft="@dimen/padding_extra"
        android:layout_marginTop="@dimen/padding_extra"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hoursText"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="@string/hours"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginEnd="@dimen/padding_extra"
        android:layout_marginRight="@dimen/padding_extra"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.799"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/messageText" />

    <Spinner
        android:id="@+id/dialogTimeSpinner"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_normal"
        android:entries="@array/time_hours_array"
        app:layout_constraintBottom_toBottomOf="@+id/hoursText"
        app:layout_constraintRight_toLeftOf="@+id/hoursText"
        app:layout_constraintTop_toTopOf="@+id/hoursText"
        android:layout_marginEnd="@dimen/padding_normal" />



</android.support.constraint.ConstraintLayout>