<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Spinner
        android:id="@+id/dialogTimeSpinner"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="@dimen/padding_normal"
        android:layout_marginStart="@dimen/padding_normal"
        android:layout_marginTop="0dp"
        android:entries="@array/time_hours_array"
        app:layout_constraintBottom_toBottomOf="@+id/hoursText"
        app:layout_constraintRight_toLeftOf="@+id/hoursText"
        app:layout_constraintTop_toTopOf="@+id/hoursText" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/hoursText"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="@string/hours"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/padding_extra"
        android:layout_marginRight="@dimen/padding_extra"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/padding_extra"
        app:layout_constraintHorizontal_bias="0.757" />


</android.support.constraint.ConstraintLayout>