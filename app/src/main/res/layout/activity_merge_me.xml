<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dlei.forkme.gui.activities.github.MergeMeActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <include layout="@layout/nav_drawer_toolbar"
        android:id="@+id/toolbar_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mergeMeMainText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="@dimen/padding_extra"
        android:layout_marginLeft="@dimen/padding_extra"
        android:layout_marginRight="@dimen/padding_extra"
        android:layout_marginStart="@dimen/padding_extra"
        android:layout_marginTop="@dimen/padding_extra"
        android:text="@string/give_perms_externally_text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/mergeMeMainButton"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/mergeMeMainButton"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_extra"
        android:layout_marginEnd="@dimen/padding_extra"
        android:text="@string/give_perms_externally_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="275dp" />

    <include layout="@layout/progress_bar_spinner"
        android:id="@+id/progress_bar_spinner_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mergeMeRecyclerView"
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        tools:layout_editor_absoluteY="54dp" />

</android.support.constraint.ConstraintLayout>
